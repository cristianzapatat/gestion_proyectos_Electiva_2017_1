<!DOCTYPE html5>
<html>
<head>
  <meta charset="utf-8">
  <title>Registro</title>
  <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon"/>
  <!--Fuente-->
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
  <script src="/bower_components/jquery/dist/jquery.min.js" charset="utf-8"></script>
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js" charset="utf-8"></script>
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">

</head>
<body class="flex-centered">
  <section class="panel panel-primary registry">
    <div class="panel-heading flex-centered">
      <h3 class="panel-title title-panel-size">Registro Usuario</h3>
    </div>
    <div class="panel-body">
      <form class="row" action="/registry" method="post">
        <input type="hidden" name="resultSTR" value="{{resultSTR}}">
        <div class="col-md-6 form-group">
          <label for="type_document">Tipo documento</label>
          <select class="form-control" name="type_document" required>
            {{#each result.documents}}
              <option value="{{id}}" {{#if select}}selected{{/if}}>{{type}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col-md-6 form-group">
          <label for="document">Número de Documento</label>
          <input type="number" class="form-control" name="document" placeholder="Número de documento" required value="{{user.document}}">
        </div>
        <div class="col-md-6 form-group">
          <label for="name">Nombre</label>
          <input type="text" class="form-control" name="name" placeholder="Nombre" required value="{{user.name}}">
        </div>
        <div class="col-md-6 form-group">
          <label for="last_name">Apellidos</label>
          <input type="text" class="form-control" name="last_name" placeholder="Apellidos" required value="{{user.last_name}}">
        </div>
        <div class="col-md-6 form-group">
          <label for="date">Fecha de Nacimiento</label>
          <input type="date" class="form-control" name="date" required value="{{user.date}}">
        </div>
        <div class="col-md-6 form-group">
          <label for="type_user">Seleccione tipo usuario</label>
          <select class="form-control" name="type_user" required>
            {{#each result.users}}
              <option value="{{id}}" {{#if select}}selected{{/if}}>{{description}}</option>
            {{/each}}
          </select>
        </div>
        <hr>
        <div class="col-md-12 form-group">
          <label for="mail">Correo Electrónico</label>
          <input type="email" class="form-control" name="mail" placeholder="Correo Electrónico" required value="{{user.mail}}">
        </div>
        <div class="col-md-6 form-group">
          <label for="password">Ingrese su clave</label>
          <input type="password" class="form-control" name="password" placeholder="Ingrese su clave" required>
        </div>
        <div class="col-md-6 form-group">
          <label for="repeat">Confirme su clave</label><br>
          <input type="password" class="form-control" name="repeat" placeholder="Repetir clave" required>
        </div>
        <div class="col-md-6">
          <label>{{error}}</label>
        </div>
        <div class="col-md-2">
          <a href="/login" class="btn btn-link">Login</a>
        </div>
        <div class="col-md-4">
          <input type="submit" class="btn btn-primary btn-block btn-flat"value="Registrarme">
        </div>
      </form>
    </div>
  </section>
</body>

</html>
