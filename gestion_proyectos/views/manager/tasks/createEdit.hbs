<section class="content-header">
  <h1>
        <b>{{action}} Tareas</b>
    </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-tachometer"></i>Tareas</a></li>
    <li class="active">{{action}}</li>
  </ol>
</section>
<hr>
<section class="content">
  <form class="row flex-centered" action="/tasks/{{action}}" method="post">
    <div class="col-md-8 row">
      <div class="form-group col-md-12">
        <label for="name">Nombre de la tarea</label>
        <input type="text" name="name" placeholder="Nombre de la tarea" class="form-control" value="{{task.name}}">
      </div>
      <div class="form-group col-md-6">
        <label for="activity">Actividad</label>
        <select class="form-control" name="activity" required>
          {{#each activities}}
          <option value="{{id}}" {{#if select}}selected{{/if}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group col-md-6">
        <label for="state">Estado de la tarea</label>
        <select class="form-control" name="state" required>
          <option value="0% – 25%" {{#if project.cero}}selected{{/if}}>0% – 25%</option>
          <option value="25% - 50%" {{#if project.uno}}selected{{/if}}>25% - 50%</option>
          <option value="50% - 75%" {{#if project.dos}}selected{{/if}}>50% - 75%</option>
          <option value="75% - 100%" {{#if project.tres}}selected{{/if}}>75% - 100%</option>
        </select>
      </div>
      <div class="col-md-6 form-group">
        <label for="start">Fecha de inicio</label>
        <input type="date" name="start" value="{{task.start}}" class="form-control" required>
      </div>
      <div class="col-md-6 form-group">
        <label for="end">Fecha de fin</label>
        <input type="date" name="end" class="form-control" value="{{task.end}}" required>
      </div>
      <hr>
      <div class="col-md-12">
        <table class="table table-striped table-condensed table-hover table-bordered">
          <thead>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Acciones</th>
          </thead>
          <tbody>
            <tr>
              <td>TV</td>
              <td>Un pinche TV</td>
              <td style="width: 120px;">
                <ul class="list-buttons">
                  <li>
                    <button type="button" class="btn btn-success btn-block" name="button">
                      <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                  </li>
                  <li>
                    <button type="button" class="btn btn-danger btn-block" name="button">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                  </li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>TV</td>
              <td>Un pinche TV</td>
              <td style="width: 120px;">
                <ul class="list-buttons">
                  <li>
                    <button type="button" class="btn btn-success btn-block" name="button">
                      <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                  </li>
                  <li>
                    <button type="button" class="btn btn-danger btn-block" name="button">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                  </li>
                </ul>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-6">

      </div>
      <div class="col-md-3">
        <a href="/activitys/list" type="buttom" class="btn btn-flat btn-block btn-info">Cancelar</a>
      </div>
      <div class="col-md-3">
        <input type="submit" name="submit" class="btn btn-flat btn-block btn-{{color}}" value="{{action}}">
      </div>
    </div>
  </form>
</section>
