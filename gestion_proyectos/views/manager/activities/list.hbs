<section class="content-header" style="position: relative;">
  <h1 class="flex-horizontal-start">
    <b style="margin-right:2%;">Lista de Actividades</b>
    <select class="form-control" name="project" required style="width: 20%;">
        <option value="-1">Todos</option>
        {{#each projects}}
        <option value="{{id}}" {{#if select}}selected{{/if}}>{{name}}</option>
        {{/each}}
      </select>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-tasks"></i>Actividades</a></li>
    <li class="active">Listar</li>
  </ol>
</section>
<hr>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <label>{{error}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Proyecto</th>
            <th>Integrante</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th style="width: 120px;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each activities}}
            <tr>
              <td>{{name}}</td>
              <td>{{description}}</td>
              <td>{{project_name}}</td>
              <td>{{user_name}}</td>
              <td>{{start}}</td>
              <td>{{end}}</td>
              <td style="width: 120px;">
                <ul class="list-buttons">
                  <li>
                    <a href="/activity/edit/{{id}}" class="btn btn-warning btn-block">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                  </li>
                  <li>
                    <a data-toggle="modal" data-target="#deleteConfirm{{id}}" class="btn btn-danger btn-block">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                  </li>
                </ul>
              </td>
            </tr>
            <div id="deleteConfirm{{id}}" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Eliminar Actividad</h4>
                  </div>
                  <div class="modal-body">
                    <p>¿Desea eliminar la actividad {{name}}?</p>
                  </div>
                  <div class="modal-footer">
                    <div class="row">
                      <div class="col-md-6">
                      </div>
                      <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-flat btn-info" data-dismiss="modal">Cancelar</button>
                      </div>
                      <div class="col-md-3">
                        <a type="button" class="btn btn-block btn-flat btn-danger" href="/activity/delete/{{id}}">Eliminar</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<script type="text/javascript">
  $(function() {
    // bind change event to select
    $('.float-select').on('change', function() {
      var url = '/activity/list/' + $('.float-select').val(); // get selected value
      if (url) { // require a URL
        window.location = url; // redirect
      }
      return false;
    });
  });
</script>
