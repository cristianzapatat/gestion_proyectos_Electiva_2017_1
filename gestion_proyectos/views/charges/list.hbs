<section class="content-header" style="position: relative;">
    <h1>
        <b>Lista de cargos</b>
    </h1>
    <select class="form-control float-select" name="project" required>
      <option value="-1">Todos</option>
      {{#each projects}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-tasks"></i>Cargos</a></li>
        <li class="active">Listar</li>
    </ol>
</section>
<hr>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <label>{{error}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Horario</th>
            <th>Salario</th>
            <th>Proyecto</th>
            <th>Descripción</th>
            <th style="width: 120px;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each charges}}
            <tr>
              <td>{{name}}</td>
              <td>{{schedule}}</td>
              <td>{{salary}}</td>
              <td>{{project_name}}</td>
              <td>{{description}}</td>
              <td style="width: 120px;">
                <ul class="list-buttons">
                  <li>
                    <a href="/charges/edit/{{id}}" class="btn btn-warning btn-block">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                  </li>
                  <li>
                    <a data-toggle="modal" data-target="#deleteConfirm{{id}}" class="btn btn-danger btn-block">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                  </li>
                </ul>
              </td>
            </tr>
            <div id="deleteConfirm{{id}}" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Eliminar cargo</h4>
                  </div>
                  <div class="modal-body">
                    <p>¿Desea eliminar el cargo {{name}}?</p>
                  </div>
                  <div class="modal-footer">
                    <div class="row">
                      <div class="col-md-6">

                      </div>
                      <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-flat btn-success" data-dismiss="modal">Cancelar</button>
                      </div>
                      <div class="col-md-3">
                        <a type="button" class="btn btn-block btn-flat btn-danger" href="/charges/delete/{{id}}">Eliminar</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
