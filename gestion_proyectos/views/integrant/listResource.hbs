<section class="content-header" style="position: relative;">
  <h1 class="flex-horizontal-start">
    <a href="/listtask/" class="btn btn-primary" style="margin-right:2px;" title="Regresar">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <b style="margin-right:2%;">Lista de Recursos</b>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-tasks"></i>Recursos</a></li>
    <li class="active">Listar</li>
  </ol>
</section>
<hr>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <label>{{error}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Ubicación</th>
          </tr>
        </thead>
        <tbody>
          {{#each resources}}
            <tr>
              <td>{{name}}</td>
              <td>{{description}}</td>
              <td>{{quantity}}</td>
              <td>{{ubication}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
