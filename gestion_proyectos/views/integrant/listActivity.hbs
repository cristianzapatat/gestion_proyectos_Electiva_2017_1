<section class="content-header" style="position: relative;">
  <h1 class="flex-horizontal-start">
    <b style="margin-right:2%;">Lista de Actividades</b>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-tasks"></i>Actividades</a></li>
    <li class="active">Listar</li>
  </ol>
</section>
<hr>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <label>{{error}}</label>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th style="width: 120px;">Tareas</th>
          </tr>
        </thead>
        <tbody>
          {{#each activities}}
            <tr>
              <td>{{name}}</td>
              <td>{{description}}</td>
              <td>{{start}}</td>
              <td>{{end}}</td>
              <td style="width: 120px;">
                <ul class="list-buttons">
                  <li>
                    <a href="/listactivity/get/{{id}}" class="btn btn-info btn-block" title="Ver">
                      <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                  </li>
                </ul>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
